{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "@john"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["gitlab/gitlab-runner", "gitlab/gitlab-runner-helper"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "GitLab Runner Alpine Updates"
    },
    {
      "matchDatasources": ["docker"],
      "matchManagers": ["dockerfile"],
      "matchPackageNames": ["alpine"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "Alpine Base Image Updates"
    }

  ]
}
